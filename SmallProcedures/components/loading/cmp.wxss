.container{
    width:60rpx;
    height:60rpx;
    position: relative;
}
.circle{
    width:100%;
    height:100%;
    background-color:#333;
    border-radius: 50%;
    opacity: 0.6;
    position: absolute;
    top: 0;
    left: 0;
    animation: run 2s infinite;
}
@keyframes run{
    0%{
        transform: scale(0)
    }
    50%{
        transform: scale(1)
    }
    100%{
        transform: scale(0)
    }
}
.small{
    animation-delay: -1s;
}