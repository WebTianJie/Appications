/* pages/index/index.wxss */
page{
    background-color:#00b26a;
}
.container{
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-top:200rpx;
}
.avatar{width: 160rpx;height: 160rpx;border-radius: 50%;}
.name{color:#666;font-size: 28rpx;margin-top:60px;}
.welcome{border:2px solid #000;padding:20px 40px;margin-top:60px;}
.add{margin-right:22rpx;}
.to-catelog{
    border:1px solid #000;
    display:inline-block;
    padding:10rpx 20rpx;
    font-size:28rpx;
}
.nav{position: fixed;top: 0;left:0;z-index: 99;}
.recommend{margin-top:110rpx;
    display:block;
}
.loading-container{
    position: fixed;
    top:0;
    left:0;
    width:100%;
    height:100%;
    background:#fff;
}
.loading{
    position: absolute;
    top:50%;
    left:50%;
    margin-top:-30rpx;
    margin-left:-30rpx;
}