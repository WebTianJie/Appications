/* pages/list/list.wxss */
.recommend-container{
    padding: 0 25rpx;
}
.recommend-article{
    display: flex;
    flex-direction: column;
    align-items: center;
}
.date{
    font-size: 52rpx;
    letter-spacing: 10rpx;
    position: relative;
    padding-bottom:24rpx;
    margom-top:20rpx;
}
.date::after{
    position: absolute;
    left: 62rpx;
    display: block;
    content: '';
    width: 114rpx;
    height: 4rpx;
    background-color: #999;
}
.recommend-title{
    font-size:28rpx;
    text-align: center;
    line-height:66rpx;
}
.recommend-cover{
    width:700rpx;
    margin-bottom: 30rpx;
}
.recmmend-box {

}
.recmmend-box text{
    display: inline-block;
    border:1px solid #000;
    padding:10rpx 20rpx;
    font-size: 28rpx;
    margin:20rpx 20rpx 20rpx 0;
}
.recmmend-box text:first-of-type{
    color:#fff;
    background-color: #000;
    font-weight:bold;
}
.recmmend-list-container{
    background-color: #ebebeb;
    padding:35rpx 35rpx 0;
}
.per-article{
    background:#fff;
    padding-bottom:30rpx;
    margin-bottom: 30rpx;
}
.per-article:last-of-type{
    margin-bottom: 0;
}
.article-head{
padding:20rpx;
}
.article-cover image{width: 100%;}
.article-head image{
    width:60rpx;
    height:60rpx;
    border-radius: 50%;
    vertical-align: middle;
    margin-right:10rpx;
}
.article-head  text{
    font-size:28rpx;
    color:#666;
}
.article-cover{
    width: 100%;
}
.article-title{
    margin: 30rpx;
}
.article-title text{
    font-size:42rpx;
}
.article-handle-box{
    display: flex;
    justify-content:space-between;
    padding:0 30rpx;
}
.article-handle{display: flex;}
.article-type text{
    border:1px solid #000;
    padding:10rpx 20rpx;
}
.article-handle-box image{
    width:50rpx;
    height:50rpx;
    margin-left:20rpx;
}