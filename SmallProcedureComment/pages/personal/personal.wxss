page {
  padding-bottom: 50rpx;
  background: #f2f2f2;
}

.header {
  padding: 0 25rpx;
  padding-top: 40rpx;
  padding-bottom: 50rpx;
  width: 100%;
  background: linear-gradient(#c21327, #e42e42);
  position:relative;
}

.user {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.header .gif-wave{
  position: absolute;
  width: 100%;
  bottom: 0;
  left: 0;
  z-index: 99;
  mix-blend-mode: screen;  
  height: 100rpx;   
}
.user_box {
  display: flex;
  align-items: center;
}

.logo {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  background: #fff;
  will-change: transform;
  position:relative;
}

.logo image {
  width: 100%;
  height: 100%;
}

.logo image {
  width: 100%;
  height: 100%;
  border-radius: 100%;
  will-change: transform;
}

.user_info {
  padding-left: 32rpx;
}

.user_name {
  display: flex;
  align-items: center;
  font-size: 36rpx;
  font-weight: bold;
  color: #fff;
}

.user_name image {
  margin-left: 16rpx;
  width: 84rpx;
  height: 31rpx;
}

.vip_expires {
  margin-top: 12rpx;
  font-size: 27rpx;
  color: #fff;
}

.list{width:100%;padding-top:60rpx;}
.item{width:100%;}
.list-item{
  border-bottom: #ccc solid 1px;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  width:100%;
  height: 80rpx;
  margin:0 auto;
  background: #fff;
  line-height: 80rpx;
  padding-left: 20rpx;
  padding-right:20rpx;
  box-sizing: border-box;
}
.list-item{color:#858585;}
.list-item text{color:#858585;}
