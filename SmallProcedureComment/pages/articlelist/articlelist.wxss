.movable-area{
  width: 100%;
  height: 80rpx;
}
.movable-view{
  width: 100%;
  height: 100%;
}
.touch-item {
  font-size: 32rpx;
  display: flex;
  justify-content: space-between;
  border-bottom:1rpx solid #ccc;
  width: 100%;
  height: 100%;
  overflow: hidden
}
.content {
  width: 355rpx;
  padding: 20rpx;
  line-height:44rpx;
  margin-right:0;
  -webkit-transition: all 0.4s;
  transition: all 0.4s;
  -webkit-transform: translateX(360rpx);
  transform: translateX(360rpx);
  margin-left: -350rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}
.ctime{text-align: right;margin-left: -40rpx;}
.lookup{border-left: 1rpx solid #ffffff;}
.del {
  background-color: #000000;
  width: 180rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #fff;
  -webkit-transform: translateX(360rpx);
  transform: translateX(360rpx);
  -webkit-transition: all 0.4s;
  transition: all 0.4s;
}
.touch-move-active .content,
.touch-move-active .del {
  -webkit-transform: translateX(0);
  transform: translateX(0);
}
