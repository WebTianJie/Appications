.container{
  width:100%;
  height:100%;
  align-items: flex-start;
}
.music-category-text{
  font-size: 38rpx;
  line-height:30rpx;

}
.big-photo-list{
  width:100%;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-around;
}
.big-photo-item{
  width:280rpx;
  display:flex;
  flex-direction:column;
  padding:5rpx 0;
}
.photo{
  width:280rpx;
  height:280rpx;
  border-radius: 50%;
  background: #aaa;
}
.list-container{width:100%;}
.music-name{
  padding-top: 4rpx;
  font-size:28rpx;
  line-height: 32rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.music-author{
  font-size: 28rpx;
  line-height: 32rpx;
}
.music-group-selector{
  display: flex;
  justify-content: center;
  align-items: center;
  margin:10rpx 0;
}
.music-group-selector-text{
  font-size:38rpx;
}
.music-group-selector-arr{
  width:28rpx;
  height:28rpx;
}
.music-play-list{
  display: flex;
  flex-direction: column;
}
.music-play-list-item{
  height:100%;
  width:100%;
  display: flex;
  flex-direction: row;
  border-bottom: 1rpx solid #eee;
  padding:10rpx 0;
}
.music-play-list-image{
  height:100rpx;
  width:100rpx;
  border-radius: 10rpx;
}
.music-play-list-text{
  padding:30rpx 20rpx;
  height: 32rpx;
}

.song-list{
  display: flex;
  flex-direction: row;
}
.songs-item{
  width:100%;
  height: 110rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  border-bottom: 1rpx solid #eee;
  padding: 10rpx 0;
  align-items: center;
}
.songs-image{
  width:80rpx;
  height:80rpx;
  border-radius: 10rpx;
}
.songs-info{
  display: flex;
  flex-direction: column;
  width:75%;
}
.songs-name{
  padding-left: 10rpx;
  font-size:28rpx;
  line-height:40rpx;
}
.songs-author{
  padding-left: 10rpx;
  font-size:28rpx;
  line-height:40rpx;
}
.songs-action-button{
  width:40rpx;
  height:40rpx;
  margin-right:10rpx;
}

.author-list{
  display: flex;
  flex-direction: column;
}
.author-item{
  width:100%;
  height: 80rpx;
  display: flex;
  flex-direction: row;
  padding:10rpx 0;
  align-items: center;
}
.author-image{
  width:80rpx;
  height:80rpx;
  border-radius:50%;
}
.author-text{
 display: flex;
 align-items: center;
 border-bottom: 1rpx solid #eee;
 height: 80rpx;
 padding:6rpx 20rpx;
 flex-grow: 1;
}

