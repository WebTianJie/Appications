<view class="content">
   <view class="canvas_area">
      <canvas 
      bindtouchstart="touchStart" 
      bindtouchmove="touchMove" 
      bindtouchend="touchEnd"
      canvas-id="mycanvas"
      class="mycanvas"
      disable-scroll="{{false}}"
      ></canvas>
   </view>
   <view class="canvas_tools">
     <view class="box box1" data-brush="5" bindtap="selectBrush"></view>
     <view class="box box2" data-brush="15" bindtap="selectBrush"></view>
     <view class="box box3" data-color="blue" bindtap="selectColor"></view>
     <view class="box box4" data-color="#ff9900" bindtap="selectColor"></view>
     <view class="box box5" bindtap="clearCanvas"></view>
   </view>
</view>
