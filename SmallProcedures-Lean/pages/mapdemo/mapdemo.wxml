<view class="page-body">
    <view class="page-section">
      <map id="mymap" style="width:100%;height:600rpx;"
        latitude="{{latitude}}"
        longitude="{{longitude}}"
        markers="{{markers}}"
        cover="{{covers}}"
        show-location
      ></map>
      <view class="btn-area">
        <button type="primary" bindtap="getLocation">获取位置</button>
        <button type="primary" bindtap="moveLoaction">移动位置</button>
        <button type="primary" bindtap="moveMaker">移动标注</button>
        <button type="primary" bindtap="scaleMap">缩放视野显示所有的经纬度</button>
      </view>
    </view>
</view>
