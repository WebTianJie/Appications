.container{
  height:100%;
  display:block;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
}
.page{
  width:100%;
  height:100%;
}
.area{
  width:90%;
  background:#ddd;
  border-radius: 10rpx;
  margin:15rpx auto;
}
.model{
  display: flex;
  flex-direction: column;
  margin:10rpx 0 10rpx 20rpx;
}
.input{
  border-bottom: 1px solid gray;
  width:80%;
  margin:0 auto;
}
.control-center{
  margin: 0 auto;
}
.textarea{
  width:90%;
  height:180rpx;
  border:1px solid grey;
  padding:10rpx;
  margin-top:20rpx;
}