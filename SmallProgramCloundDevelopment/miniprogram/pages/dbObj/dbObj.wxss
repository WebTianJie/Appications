.container{
  height:100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  padding:50rpx 0;
  box-sizing:border-box;
}
page{
  width:100%;
  height: 100%;
  background:wheat;
}
.page-body{
  width:100%;
  height:100%;
  background:wheat;
}
.page-section{
  width:90%;
  background:white;
  border-radius: 10rpx;
  margin:20rpx auto;
  padding:20rpx;
}
.page-section-title{
  text-align:center;
  font-size:40rpx;
}
.section-row{
  display: flex;
  flex-direction: row;
  justify-content:center;
  height:100rpx;
  line-height:100rpx;
}
.inputs{
  background:#c3c3e4;
  margin-top:30rpx;
  height:30rpx;
  border-radius: 5rpx;
  margin-left:10rpx;
}
button{
  margin:40rpx 0;
}