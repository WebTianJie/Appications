.page-section{
  width:95%;
  background: white;
  border-radius: 10rpx;
  padding:10rpx;
  margin:10rpx 0;
}

.title{
  text-align: center;
  font-size:5vw;
}
.page-row{
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  width:100%;
  line-height: 10rpx;
  margin:10rpx 0;
}
form{
  width:100%;
}
text{
  font-size:5vw;
  padding:0 10rpx;
}
input{background: rgb(248, 245, 245);
  height:60rpx;
  width:80%;
  border-radius: 6rpx;
}
.content{
  font-size: 4vw;
  padding:0 10rpx;
}
textarea{
  background: rgb(243, 238, 238);
  margin: 20rpx auto;
  width:100%;
}
.page-section button{width:100%;border-bottom: 1px solid #ccc;}