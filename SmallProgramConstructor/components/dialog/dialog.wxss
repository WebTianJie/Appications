.wx_dialog_container{

}
.wx-mask{
  position: fixed;
  z-index: 1000;
  top:0;
  left:0;
  right:0;
  bottom:0;
  background: rgba(0,0,0,0.3);
}
.wx-dialog{
  position: fixed;
  z-index: 5000;
  width:80%;
  max-width: 600rpx;
  left:50%;
  top: 50%;
  transform: translate(-50%,-50%);
  background:#ffffff;
  text-align: center;
  border-radius: 6rpx;
  overflow:hidden;
}
.wx-dialog-title{
  font-size:36rpx;
  padding:30rpx 30rpx 10px;
}
.wx-dialog-content{
  padding:30rpx 30rpx 10rpx;
  min-height:80rpx;
  font-size: 32rpx;
  line-height: 1.3;
  word-break:break-all;
  word-wrap: break-word;
  color:#999;
}
.wx-dialog-footer{
  display: flex;
  align-items: center;
  line-height:90rpx;
  font-size: 34rpx;
  position: relative;
}
.wx-dialog-btn::before{
  content:'';
  position:absolute;
  left: 0;
  top:0;
  right:0;
  height: 2rpx;
  border-top:2rpx solid #d5d5d6;
  color:#d5d5d6;
  transform-origin: 0 0 ;
  transform: scaleY(0.5);
}

.wx-dialog-btn{
  display: block;
  flex: 1;
  position: relative;
}
.wx-dialog-footer  .wx-dialog-btn:nth-last-of-type(2){
  color: #353535;
}
.wx-dialog-footer .wx-dialog-btn:nth-last-of-type(1){
  color: #3cc51f;
}

.wx-dialog-btn:nth-last-of-type(1)::after{
  content:'';
  position: absolute;
  left:0;
  top:0;
  width:2rpx;
  bottom: 0;
  border-left: 2rpx solid #d5d5d6;
  color:#d5d5d6;
  transform-origin: 0 0 ;
  transform: scaleX(0.5);
}